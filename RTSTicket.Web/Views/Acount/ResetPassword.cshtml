@model ResetPasswordModel
@{
    ViewData["Title"] = "ResetPassword";
}

<h1>ResetPassword</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-controller="Acount" asp-action="ResetPassword" method="post">
            <h4>Create a new password.</h4>
            <hr />
            @Html.Hidden("Code",Model.Code)
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SendPasword"></label>
                <input asp-for="SendPasword" class="form-control" />
                <span asp-validation-for="SendPasword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmNewPassword"></label>
                <input asp-for="ConfirmNewPassword" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Send</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}